from covid import Covid

covid = Covid()

countrynames = []
countries = covid.list_countries()
for country in countries:
    countrynames.append(country['name'])

cases = []
for i in countrynames:
    cases = covid.get_status_by_country_name(i)
    case = list(cases.values())
    pop = case[1]

    print(i, ":", pop)

